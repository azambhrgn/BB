<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/lvname"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Father"
        android:textColor="#000000"
        android:id="@+id/lvfathername"
        android:layout_below="@+id/lvname"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignLeft="@+id/lvname"
        android:layout_alignStart="@+id/lvname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mohalla"
        android:textColor="#000000"
        android:id="@+id/lvmohalla"
        android:layout_below="@+id/lvfathername"
        android:layout_alignLeft="@+id/lvfathername"
        android:layout_alignStart="@+id/lvfathername" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone"
        android:textColor="#000000"
        android:id="@+id/lvphone"
        android:layout_below="@+id/lvmohalla"
        android:layout_alignLeft="@+id/lvmohalla"
        android:layout_alignStart="@+id/lvmohalla" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name: "
        android:textColor="#000000"
        android:id="@+id/textView"
        android:layout_above="@+id/lvfathername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Father/Husband: "
        android:textColor="#000000"
        android:id="@+id/textView2"
        android:layout_above="@+id/lvmohalla"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mohalla: "
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_above="@+id/lvphone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone: "
        android:textColor="#000000"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="City:"
        android:textColor="#000000"
        android:id="@+id/textView5"
        android:layout_below="@+id/lvphone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="City"
        android:textColor="#000000"
        android:id="@+id/lvcity"
        android:layout_below="@+id/lvphone"
        android:layout_alignLeft="@+id/lvphone"
        android:layout_alignStart="@+id/lvphone" />
</RelativeLayout>
